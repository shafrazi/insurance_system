<div class="card" style="width: 60rem;">
  <div class="card-body">
    <% if f.object.new_record? %>
    <div class='nested-fields'>
        <div class="form-group">
          <%= f.label :policyno %>
          <%= f.text_field :policyno, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :begin_date %>
          <%= f.text_field :begin_date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :expiry_date %>
          <%= f.text_field :expiry_date, class: "form-control" %>
        </div>
        <div>
          <%= link_to_remove_association "Remove Insurance Renewal", f, class: "btn btn-danger", role: "button" %>
        </div>
        <br />
      </div>
      <% end %>
  </div>
</div>
