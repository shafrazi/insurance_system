<%= form_for(customer) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <!-- <div class="actions">
    <<%= f.submit class: "btn btn-primary" %>
  </div> -->

  <h4>Insurance Policies</h4>
  <div>
    <%= f.fields_for :insurance_policies do |policy| %>
    <%= render "insurance_policy_fields", :f => policy %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "Add Insurance Policy", f, :insurance_policies, class: "btn btn-primary", role: "button" %>
      <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>

<% end %>
