<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Renewals</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Policyno</th>
        <th>Begin date</th>
        <th>Expiry date</th>
        <th>Insurance policy</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @renewals.each do |renewal| %>
        <tr>
          <td><%= renewal.policyno %></td>
          <td><%= renewal.begin_date %></td>
          <td><%= renewal.expiry_date %></td>
          <td><%= renewal.insurance_policy.policyno %></td>
          <td><%= link_to 'Show', renewal %></td>
          <td><%= link_to 'Edit', edit_renewal_path(renewal) %></td>
          <td><%= link_to 'Destroy', renewal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Renewal', new_renewal_path %>

  </div>
